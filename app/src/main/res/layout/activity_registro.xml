<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_activity"
    android:scrollbars="none"
    tools:context=".Registro_Activity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif-black"
            android:text="Registrar Paseador "
            android:textAlignment="center"
            android:textColor="@color/azul_tercero"
            android:textSize="34sp"
            android:textStyle="bold" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="24dp"
            android:text="Nombre del Paseador"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edt_usu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableStart="@drawable/paseador_icono"
            android:duplicateParentState="true"
            android:textSize="12sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:text="Email"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/edt_correo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableStart="@drawable/email"
            android:textSize="12sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:text="password"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edt_pass"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableStart="@drawable/clave_icono"
            android:inputType="textPassword"
            android:textSize="12sp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:text="Confirmar Password"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edt_confimar_pass"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableStart="@drawable/confirmar"
            android:inputType="textPassword"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_registrar"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="32dp"
            android:background="@drawable/boton"
            android:backgroundTint="@color/azul_tercero"
            android:onClick="onClick"
            android:text="Confirmar" />



    </LinearLayout>
</ScrollView>